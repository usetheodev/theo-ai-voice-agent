# =============================================================================
# AI Transcribe - Environment Variables
# =============================================================================

# WebSocket Server
WS_HOST=0.0.0.0
WS_PORT=8766
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_CLOSE_TIMEOUT=5
WS_MAX_MESSAGE_SIZE=10485760

# Elasticsearch
ES_HOSTS=http://127.0.0.1:9200
ES_INDEX_PREFIX=voice-transcriptions
ES_BULK_SIZE=50
ES_FLUSH_INTERVAL_MS=1000

# STT (Speech-to-Text)
STT_PROVIDER=faster-whisper
STT_MODEL=tiny
STT_LANGUAGE=pt
STT_DEVICE=cpu
STT_COMPUTE_TYPE=int8

# Audio Config
AUDIO_SAMPLE_RATE=8000
AUDIO_CHANNELS=1
AUDIO_SAMPLE_WIDTH=2

# Logging
LOG_LEVEL=INFO

# Metrics
METRICS_PORT=9093
METRICS_ENABLED=true
