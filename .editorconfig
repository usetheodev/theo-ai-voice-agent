# =============================================================================
# EditorConfig - Configuração do Editor
# https://editorconfig.org
# =============================================================================
# Este arquivo ajuda a manter estilos de código consistentes entre editores
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Padrões Globais
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# Python
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# TypeScript / JavaScript / JSON
# -----------------------------------------------------------------------------
[*.{ts,tsx,js,jsx,json}]
indent_size = 2

# -----------------------------------------------------------------------------
# YAML / TOML
# -----------------------------------------------------------------------------
[*.{yml,yaml,toml}]
indent_size = 2

# -----------------------------------------------------------------------------
# Shell Scripts
# -----------------------------------------------------------------------------
[*.sh]
indent_size = 4

# -----------------------------------------------------------------------------
# Markdown
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# -----------------------------------------------------------------------------
# Makefiles (requerem tabs)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab

# -----------------------------------------------------------------------------
# Docker
# -----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# -----------------------------------------------------------------------------
# Asterisk Config
# -----------------------------------------------------------------------------
[*.conf]
indent_size = 4
